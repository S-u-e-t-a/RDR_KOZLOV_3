<Window x:Class="PlenkaWpf.View.SelectProperties"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:ViewModels;assembly=ViewModels"
        mc:Ignorable="d"
        Title="SelectProperties" Height="450" Width="800"
        d:DataContext="{d:DesignInstance viewModels:SelectPropertiesVM}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <DataGrid x:Name="PropertyGrid" ItemsSource="{Binding AvailableProperties}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ProperrtyId}" />
                <DataGridTextColumn Header="Имя свойства" Binding="{Binding PropertyName}" />
                <DataGridTextColumn Header="Единица измерения" Binding="{Binding Unit.UnitName}" />
            </DataGrid.Columns>
        </DataGrid>
        <Grid Row="1">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="CreateButton" Width="100" Margin="5" Content="Создать"/>
                <Button x:Name="AddButton" Width="100" Margin="5" Content="Добавить" Command="{Binding SelectProperties}" CommandParameter="{Binding ElementName=PropertyGrid, Path=SelectedItems}"/>
                <Button x:Name="EditButton" Width="100" Margin="5" Content="Изменить" />
                <Button x:Name="ExitButton" Width="100" Margin="5" Content="Удалить" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>
