<Window x:Class="PlenkaWpf.View.LoginWindow"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition />
            <RowDefinition Height="80" />
        </Grid.RowDefinitions>
        <Grid Row="1" Height="150" Width="180">
            <StackPanel>
                <hc:TextBox hc:InfoElement.Title="Имя пользователя" >

                </hc:TextBox>
                <hc:PasswordBox hc:InfoElement.Title="Пароль">

                </hc:PasswordBox>
                <Button Margin="5" Content="Выполнить вход" Click="Button_Click" />
            </StackPanel>
            
        </Grid>
    </Grid>
</Window>