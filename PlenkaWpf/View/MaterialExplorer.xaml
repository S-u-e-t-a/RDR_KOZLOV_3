<Window x:Class="PlenkaWpf.View.MaterialExplorer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:vm="clr-namespace:PlenkaWpf.VM"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance vm:MaterialExplorerVM}"
        d:DesignHeight="450" d:DesignWidth="800"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <DataGrid AutoGenerateColumns="False" ItemsSource="{Binding Materials}" CanUserAddRows="False" IsReadOnly="True"
                  SelectedItem="{Binding SelectedMaterial}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding MaterialId}" />
                <DataGridTextColumn Header="Имя" Binding="{Binding MateriadName}" />
                <DataGridTextColumn Header="Количество параметров" Binding="{Binding Values.Count}" />

            </DataGrid.Columns>
        </DataGrid>
        <Grid Row="1">
            <hc:ElementGroup Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="AddButton" Width="100" Content="Добавить" Command="{Binding AddNewMaterial }" />
                <Button x:Name="EditButton" Width="100" Content="Изменить" Command="{Binding EditMaterial }" />
                <Button x:Name="ExitButton" Width="100" Content="Удалить" />
            </hc:ElementGroup>
        </Grid>
    </Grid>
</Window>